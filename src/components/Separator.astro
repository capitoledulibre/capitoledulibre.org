---
interface Props {
  height?: number;
  direction?: "left" | "right";
  orientation?: "up" | "down";
  color: string;
}

const {
  height = 30,
  direction = "right",
  orientation = "down",
  color,
} = Astro.props;

let points;

if (orientation === "down" && direction === "right") {
  points = `0,0 100,0 100,${height}`;
} else if (orientation === "down" && direction === "left") {
  points = `0,${height} 0,0 100,0`;
} else if (orientation === "up" && direction === "right") {
  points = `0,${height} 100,${height} 100,0`;
} else if (orientation === "up" && direction === "left") {
  points = `0,${height} 0,0 100,${height}`;
}
---

<svg
  viewBox={`0 0 100 ${height}`}
  preserveAspectRatio="none"
  width="100%"
  height={`${height}px`}
  xmlns="http://www.w3.org/2000/svg"
  style="display: block;"
>
  <polygon points={points} fill="currentColor"></polygon>
</svg>

<style define:vars={{ color }}>
  svg {
    line-height: 0;
    margin: 0;
    padding: -1px 0;
    width: 100vw;
    color: var(--color);
  }
</style>
